<?xml version="1.0" encoding="utf-8"?>
<!-- 外层用垂直LinearLayout，包含Toolbar和ScrollView -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 导航条 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:background="#0066B3"
        android:titleTextColor="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"/>

    <!-- 滚动内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 活动标题 -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#005AA7"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"/>

            <!-- 活动类型 -->
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp"/>

            <!-- 活动时间 -->
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <!-- 活动地点 -->
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <!-- 主办方 -->
            <TextView
                android:id="@+id/tv_organizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <!-- 报名人数 -->
            <TextView
                android:id="@+id/tv_apply_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#FF5722"
                android:layout_marginBottom="12dp"/>

            <!-- 活动描述 -->
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginBottom="12dp"/>

            <!-- 【已修改】功能按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_collect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="收藏"
                    android:backgroundTint="#FF9800"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"/> <!-- 使用 marginEnd 替代 marginRight -->

                <Button
                    android:id="@+id/btn_apply"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="报名参加"
                    android:backgroundTint="#005AA7"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp"/> <!-- 使用 marginStart 增加左边距 -->

                <!-- 【已删除】调试按钮 -->

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>